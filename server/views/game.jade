extends page

block tabs
    ul(data-role='nd2tabs' data-swipe=true)
        li(data-tab='info') Info
        li(data-tab='map') Map
        li(data-tab='a') A
        li(data-tab='b') B

block content
    div(data-role='nd2tab', data-tab='info')
        p Game name: #{game.name}
        p Specific game info here...

    div(data-role='nd2tab', data-tab='map')
        p Show map here...

    div(data-role='nd2tab', data-tab='a')
        p A...

    div(data-role='nd2tab', data-tab='b')
        p B...