extends page

block content
    p Enter your username and password to login.

    form(method='POST', action='/login')
        input(type='text', name='login_user', placeholder='Username or mail')
        input(type='password', name='login_password', placeholder='Password')

        input.ui-btn.ui-icon-lock.ui-btn-icon-right(type='submit', value='Login')

        a.ui-btn.ui-shadow(href='/register') Register