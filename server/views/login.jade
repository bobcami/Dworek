extends page

block content
    p Enter your mail address and password to login.

    form(method='POST', action='/login/#')
        input(type='text', name='mail', placeholder='Mail address')
        input(type='password', name='password', placeholder='Password')

        input(type='submit', data-role='button', data-icon='lock', value='Login')

        a(href='/register', data-role='button', title='Register') Register