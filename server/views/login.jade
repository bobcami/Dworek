extends page

block content
    p Enter your mail address and password to login.

    form(method='POST', action='/login')
        input(type='text', name='mail', placeholder='Mail address')
        input(type='password', name='password', placeholder='Password')

        input.ui-btn.ui-icon-lock.ui-btn-icon-right(type='submit', value='Login')

        a.ui-btn.ui-shadow(href='/register') Register