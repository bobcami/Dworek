extends page

block content
    //- Print the error message
    p !{message.replace(/\n/g, '<br />')}

    //- Show the back button
    unless hideBackButton
        fieldset(data-role='controlgroup', data-type='vertical')
            a.ui-btn.ui-icon-back.ui-btn-icon-left.ui-shadow(href='/', data-rel='back', data-direction='reverse', title='Go back') Go back

    //- Show the login button if specified
    if showLoginButton
        fieldset(data-role='controlgroup', data-type='vertical')
            a.ui-btn.ui-icon-lock.ui-btn-icon-left.ui-shadow(href='/login', title='Go to the login page') Login

    //- Show a stack trace if given
    if showStacktrace
        p Additional error information for developers:
        p Error: #{stacktrace.message}
        p Status: #{stacktrace.status}
        p Stack: #{stacktrace.stack}