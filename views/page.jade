extends layout

block page
    //- Page block
    //- TODO: Should we use the 'data-unload="false"' attribute to minimize internet usage on mobile
    div(data-role='page')
        //- Page header
        div(data-role='header')
            //- Back button
            a.ui-btn.ui-corner-all.ui-shadow.ui-icon-back.ui-btn-icon-left(href='#', data-rel='back', data-direction='reverse') Back

            //- Header title
            h1: a(href='/', data-ajax='false', title='Reload application')= title

        //- Page content
        div.ui-content(data-role='main')
            block content

        //- Page footer
        div(data-role='footer')
            //- Footer title
            h1: a(href='/about') Copyright © Tim Visée 2016
